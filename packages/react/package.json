{
  "name": "@snapkit/react",
  "version": "1.0.0",
  "description": "React components and hooks for Snapkit image optimization",
  "keywords": [
    "react",
    "image",
    "components",
    "hooks",
    "snapkit",
    "optimization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/snapkit/snapkit-nextjs.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "author": "Snapkit",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "check-types": "tsc --noEmit",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest --run"
  },
  "dependencies": {
    "@snapkit/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}